{
  "name": "zod-metadata",
  "version": "1.1.0",
  "description": "Extends Zod with metadata",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "require": "./dist/index.js",
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    },
    "./register": "./register.js",
    "./register.js": "./register.js",
    "./package.json": "./package.json"
  },
  "files": [
    "dist",
    "register.js",
    "register.d.ts",
    "README.md",
    "LICENSE"
  ],
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "clean": "rimraf dist",
    "build": "npm run clean && tsc -p tsconfig.build.json",
    "format": "prettier \"**/*.{js,ts,md}\" --write",
    "lint": "eslint . --ext .ts --fix",
    "test": "jest",
    "test:cov": "jest --coverage",
    "test:watch": "jest --watch",
    "typecheck": "tsc --noEmit",
    "prepare": "husky install"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/IvanovES/zod-metadata.git"
  },
  "keywords": [
    "zod",
    "schema",
    "validation",
    "metadata",
    "typescript"
  ],
  "author": "Emil Ivanov",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/IvanovES/zod-metadata/issues"
  },
  "homepage": "https://github.com/IvanovES/zod-metadata#readme",
  "peerDependencies": {
    "zod": "^3.21.2"
  },
  "devDependencies": {
    "@commitlint/config-conventional": "^17.4.4",
    "@tsconfig/recommended": "^1.0.2",
    "@types/jest": "^29.4.0",
    "@typescript-eslint/eslint-plugin": "^5.54.1",
    "@typescript-eslint/parser": "^5.54.1",
    "commitlint": "^17.4.4",
    "eslint": "^8.36.0",
    "eslint-config-prettier": "^8.7.0",
    "husky": "^8.0.0",
    "jest": "^29.5.0",
    "lint-staged": "^13.2.0",
    "prettier": "^2.8.4",
    "rimraf": "^4.3.1",
    "ts-jest": "^29.0.5",
    "ts-node": "^10.9.1",
    "typescript": "^4.9.5",
    "zod": "^3.21.2"
  }
}
